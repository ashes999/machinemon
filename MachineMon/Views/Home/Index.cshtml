@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Messages</h2>
        <ul>
            @{ 
                var messages = ViewBag.Messages as IEnumerable<MachineMon.DataAccess.DataTransferObjects.Message>;
                if (messages != null)
                {
                    foreach (MachineMon.DataAccess.DataTransferObjects.Message message in messages)
                    {
                    <li><strong>@message.Sender: </strong>@message.Contents (@message.MessageDateTimeUtc.ToLocalTime()</li>
                        }
                    }
                }
        </ul>
    </div>
</div>